{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
    {% if survey.repeatable or (survey.repeatable == false and pass is empty) %}
        <pass id="{{ survey.id }}" questions="{{ questions }}"></pass>
    {% else %}
        <div class="card">
            <div class="card-body">
                <h3 class="text-primary">{{ survey.name }}</h3>
                <div>You have already completed this survey</div>
            </div>
        </div>
    {% endif %}
{% endblock %}
