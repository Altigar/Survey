{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Surveys</h2>
                <a href="{{ path('survey_create') }}" class="btn btn-success">Create survey</a>
            </div>
        </div>
        <div class="table-responsive card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for survey in surveys %}
                        <tr class="align-items-center">
                            {% if survey.name|length >= 70 %}
                                <td>{{ survey.name|slice(0, 70) }}...</td>
                            {% else %}
                                <td>{{ survey.name }}</td>
                            {% endif %}
                            <td>{{ survey.createdAt|date('d-m-Y') }}</td>
                            <td>
                                <a href="{{ path('content', {survey: survey.id}) }}" class="btn btn-info text-light me-1">View</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
