{% extends 'base.html.twig' %}

{% block title %}Hello SurveyController!{% endblock %}

{% block body %}
    <b-row class="min-w-100">
        <b-form method="POST" action="{{ path('survey_create') }}">
            <b-btn type="submit">create survey</b-btn>
        </b-form>
    </b-row>
    {% for survey in surveys %}
        <div>
            <b-link href="{{ path('survey_plan', {id: survey.id}) }}">{{ survey.id }}</b-link>
        </div>
    {% endfor %}
{% endblock %}
