{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
    {% include('partials/navigation.html.twig') %}
    <div class="card">
        <div class="card-body">
            <h3 class="mb-2">Copy link</h3>
            <p class="mb-2">
                <a class="text-decoration-none link-primary" href="{{ path('pass', {hash: survey.hash}) }}" target="_blank">
                    {{ url('pass', {hash: survey.hash}) }}
                </a>
            </p>
            <div class="input-group">
                <input id="link" type="text" class="form-control me-3 rounded" value="{{ url('pass', {hash: survey.hash}) }}" >
                <button class="btn btn-success rounded" type="button" onclick="copy()">Copy link</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
		function copy() {
			let link = document.getElementById('link');
			link.select();
			link.setSelectionRange(0, 99999);
			document.execCommand('copy');
		}
    </script>
{% endblock %}