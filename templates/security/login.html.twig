{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

{% block body %}
<b-form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <b-form-group label="Email" label-for="email">
        <b-form-input name="email" id="email" value="{{ last_username }}"></b-form-input>
    </b-form-group>
    <b-form-group label="Password" label-for="password">
        <b-form-input name="password" id="password" type="password"></b-form-input>
    </b-form-group>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <b-form-checkbox class="mb-3" name="_remember_me">Remember me</b-form-checkbox>
    <b-btn type="submit" variant="primary">Login</b-btn>
</b-form>
{% endblock %}
